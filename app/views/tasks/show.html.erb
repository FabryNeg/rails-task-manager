<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><% if @task.completed %></p>
<p><%= "[x]" %></p>
<p><% else %></p>
<p><%= "[ ]" %></p>
<p><% end %></p>

<%= link_to "edit task", edit_task_path(@task)  %>
<%= link_to 'destroy', task_path(@task), method: :delete, data: {confirm: "Are you sure that you want to delete this task?"} %>

